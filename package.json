{
  "name": "swagger-to-joi",
  "version": "0.0.0",
  "description": "oclif example Hello World CLI",
  "author": "Nico Prananta @nicnocquee",
  "bin": {
    "stj": "./bin/run"
  },
  "homepage": "https://github.com/nicnocquee/hello-world",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "nicnocquee/hello-world",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/templates"
  ],
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.1",
    "@octokit/core": "^4.0.4",
    "handlebars": "^4.7.7",
    "js-yaml": "^4.1.0",
    "yaml-js": "^0.3.1"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@types/chai": "^4",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.4",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.2",
    "eslint-config-prettier": "^8.5.0",
    "globby": "^11",
    "mocha": "^9",
    "oclif": "^3",
    "prettier": "2.7.1",
    "shx": "^0.3.3",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "oclif": {
    "bin": "stj",
    "dirname": "swagger-to-joi",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ]
  },
  "scripts": {
    "start": "rm tsconfig.tsbuildinfo && npm run build && ./bin/run generate",
    "build": "shx rm -rf dist && tsc -b",
    "check:lint": "eslint . --ext .ts --config .eslintrc",
    "check:format": "prettier --check 'src/*.{ts,js}'",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run check:lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "bugs": "https://github.com/nicnocquee/hello-world/issues",
  "keywords": [
    "oclif"
  ],
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache"
    ],
    "*.{ts,js,css,md}": "prettier --write"
  },
  "types": "dist/index.d.ts"
}
